@model LCesarAdvogados.MVC.ViewModel.PostViewModel

@{
    ViewBag.Title = "LCesar Advogados";
    Layout = "~/Views/Shared/AreaAdmin.cshtml";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <style>
        .trCabecalho {
            background-color: #2A3F54;
            color: #fff;
            width:15%!important;
        }

        .trCorpo {
            background-color: #f5f5f5;
        }
    </style>
</head>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<body style="background-color:#fff!important">
    <h3>Tem certeza que deseja excluir este Post?</h3>
    <div>
        <table class="table table-bordered">
            <tr>
                <td class="trCabecalho">
                  Id
                </td>

                <td class="trCorpo">
                    @Html.DisplayFor(model => model.IdPost)
                </td>
            </tr>
            <tr>
                <td class="trCabecalho">
                  Título
                </td>
                <td class="trCorpo">
                    @Html.DisplayFor(model => model.TituloPost)
                </td>

            </tr> 
            <tr>
                <td class="trCabecalho">
                    Data Cadastro
                </td>
                <td class="trCorpo">
                    @Html.DisplayFor(model => model.DataCadastro)
                </td>
            </tr>          
        </table>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <input type="submit" value="Excluir" class="btn btn-primary" />
                <a href="@Url.Action("Index", "Posts")" class="btn btn-default">Voltar</a>
            </div>
        }
    </div>
</body>