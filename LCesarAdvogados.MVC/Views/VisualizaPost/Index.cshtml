@model IEnumerable<LCesarAdvogados.MVC.ViewModel.PostViewModel>

@{
    ViewBag.Title = "LCesar Advogados";
    Layout = null;
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<style>
    .SeparaDiv {
        border-bottom: 5px solid #000;
        padding-bottom: 50px;
    }
</style>
<nav class="navbar navbar-default navbar-fixed-top navbar-inverse">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                L.CÉSAR Advogados
            </a>
        </div>
    </div>
</nav>
<div class="container" style="margin-top:50px">
    @foreach (var item in Model)
    {
            <div class="row col-sm-12 SeparaDiv">
                <div class="col-sm-12"><h1>@Html.DisplayFor(modelItem => item.TituloPost)</h1></div>
                <div class="col-sm-12">@Html.Raw(HttpUtility.HtmlDecode(item.ConteudoPost))</div>
            </div>
    }
</div>
