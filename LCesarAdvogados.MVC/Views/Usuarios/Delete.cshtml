@model LCesarAdvogados.MVC.ViewModel.UsuarioViewModel

@{
    ViewBag.Title = "LCesar Advogados";
    Layout = "~/Views/Shared/AreaAdmin.cshtml";
}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
   
    <style>
        .trCabecalho {
            background-color: #2A3F54;
            color: #fff;
            width:15%!important;
        }
        .trCorpo{
            background-color:#f5f5f5;
        }
    </style>
</head>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<body style="background-color:#fff!important">
    <h3>Tem certeza que deseja excluir este usuário?</h3>
    <div>       
        <table class="table table-bordered">
            <tr>
                <td class="trCabecalho">
                    @Html.DisplayNameFor(model => model.Nome)
                </td>

                <td class="trCorpo">
                    @Html.DisplayFor(model => model.Nome)
                </td>
            </tr>
            <tr>
                <td class="trCabecalho">
                    @Html.DisplayNameFor(model => model.Login)
                </td>

                <td class="trCorpo">
                    @Html.DisplayFor(model => model.Login)
                </td>
            </tr>
            <tr>
                <td class="trCabecalho">
                    @Html.DisplayNameFor(model => model.Email)
                </td>

                <td class="trCorpo">
                    @Html.DisplayFor(model => model.Email)
                </td>
            </tr>
            <tr>
                <td class="trCabecalho">
                    @Html.DisplayNameFor(model => model.Senha)
                </td>
                <td class="trCorpo">
                    @Html.DisplayFor(model => model.Senha)
                </td>
            </tr>
        </table>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Excluir" class="btn btn-primary" /> 
                <a href="@Url.Action("Index", "Usuarios")" class="btn btn-default">Voltar</a>
            </div>
        }
    </div>
</body>