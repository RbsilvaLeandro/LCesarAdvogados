@model LCesarAdvogados.MVC.ViewModel.LoginViewModel


@{
    ViewBag.Title = "Index";
    Layout = "";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link href="~/Content/Login/Login.css" rel="stylesheet" />

<div>

    @using (Html.BeginForm("Login", "Login"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <div>
                <div class="container" style="margin-top: 150px;">
                    <div class="row">
                        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-4">
                            <div class="panel panel-default Login">
                                <div class="panel-body" style="padding-top:40px">
                                    <form role="form" action="#" method="POST">
                                        <fieldset>
                                            <div class="row">
                                                <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                                    <div class="form-group">
                                                        <div class="input-group">
                                                            <span class="input-group-addon" id="ImgLog">
                                                                <i class="glyphicon glyphicon-user"></i>
                                                            </span>
                                                            @Html.TextBoxFor(model => model.Login, new {  @placeholder = "Usuário" })

                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <div class="input-group">
                                                            <span class="input-group-addon">
                                                                <i class="glyphicon glyphicon-lock"></i>
                                                            </span>
                                                            @Html.PasswordFor(model => model.Senha, new {  @placeholder = "Senha"  })
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <div>
                                                            <input type="submit" value="Login" id="BtnLogin" class="btn btn-default btn-lg btn-block" style="background-color:white;color:#fff" />
                                                        </div>
                                                    </div>
                                                    <br>
                                                    <div>
                                                        @Html.ValidationSummary(false, "", new { @class = "ErroLogin" });
                                                    </div>
                                                </div>
                                            </div>
                                        </fieldset>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
